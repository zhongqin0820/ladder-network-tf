#Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end of line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,go}]
indent_size = 4
max_line_length = 80

[*.{js,ts}]
indent_size = 2
max_line_length = 80

[*.md]
indent_size = 2
max_line_length = off
trim_trailing_whitespace = false
